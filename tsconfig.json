{
  "compilerOptions": {
    "outDir": "./lib",
    "target": "es5",
    "module": "commonjs",
    "lib": ["es5", "es6", "dom"],
    "noImplicitAny": true,
    "strictNullChecks": true,
    "declaration": true,
    "sourceMap": true,
    "jsx": "react",
    "typeRoots": ["node_modules/@types"]
  },
  "exclude": [
    "node_modules",
    "lib"
  ]
}